<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header -->
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/AppPrimary"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:contentDescription="Menu"
                    android:layout_centerVertical="true"
                    android:src="@drawable/menu_logo" />

                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:src="@drawable/logo_white_right"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="ShelfShare Logo" />

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Search"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search_logo" />

            </RelativeLayout>

            <!-- Book Categories Section -->
            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Fiction Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fiction"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Book Item 1 -->
                        <LinearLayout
                            android:id="@+id/book_item_1"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:src="@drawable/fiction_image"
                                android:scaleType="centerCrop"
                                android:contentDescription="Book Cover" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Book Title 1"
                                android:textSize="14sp"
                                android:paddingTop="4dp"
                                android:ellipsize="end"
                                android:maxLines="2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Author Name"
                                android:textSize="12sp"
                                android:textColor="#666"
                                android:paddingTop="2dp" />

                        </LinearLayout>

                        <!-- Book Item 2 -->
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:src="@drawable/horror_image"
                                android:scaleType="centerCrop"
                                android:contentDescription="Book Cover" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Book Title 2"
                                android:textSize="14sp"
                                android:paddingTop="4dp"
                                android:ellipsize="end"
                                android:maxLines="2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Author Name"
                                android:textSize="12sp"
                                android:textColor="#666"
                                android:paddingTop="2dp" />

                        </LinearLayout>

                        <!-- Book Item 3 -->
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:src="@drawable/comedy_image"
                                android:scaleType="centerCrop"
                                android:contentDescription="Book Cover" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Book Title 3"
                                android:textSize="14sp"
                                android:paddingTop="4dp"
                                android:ellipsize="end"
                                android:maxLines="2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Author Name"
                                android:textSize="12sp"
                                android:textColor="#666"
                                android:paddingTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Non-Fiction Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non-Fiction"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Book Item 4 -->
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:src="@drawable/comedy_image"
                                android:scaleType="centerCrop"
                                android:contentDescription="Book Cover" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Book Title 4"
                                android:textSize="14sp"
                                android:paddingTop="4dp"
                                android:ellipsize="end"
                                android:maxLines="2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Author Name"
                                android:textSize="12sp"
                                android:textColor="#666"
                                android:paddingTop="2dp" />

                        </LinearLayout>

                        <!-- Book Item 5 -->
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:src="@drawable/fiction_image"
                                android:scaleType="centerCrop"
                                android:contentDescription="Book Cover" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Book Title 5"
                                android:textSize="14sp"
                                android:paddingTop="4dp"
                                android:ellipsize="end"
                                android:maxLines="2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Author Name"
                                android:textSize="12sp"
                                android:textColor="#666"
                                android:paddingTop="2dp" />

                        </LinearLayout>

                        <!-- Book Item 6 -->
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:src="@drawable/horror_image"
                                android:scaleType="centerCrop"
                                android:contentDescription="Book Cover" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Book Title 6"
                                android:textSize="14sp"
                                android:paddingTop="4dp"
                                android:ellipsize="end"
                                android:maxLines="2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Author Name"
                                android:textSize="12sp"
                                android:textColor="#666"
                                android:paddingTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>